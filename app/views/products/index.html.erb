
<div class="container-fluid">

  <div class="header">
    <h1>Our Products</h1>
  </div>

  <div class="row">
    <% cache @products do %>
    	<% @products.each do |product| %>
    	  <%= render product %>
      <% end %>
  	<% end %>
  </div>
</div>

<br>

<% if signed_in? && current_user.admin? %>
    <%= link_to 'New Product', new_product_path %>
<% end %>