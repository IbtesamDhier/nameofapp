<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag(product.image_url, class: "img-responsive product-img") %>
      <div class="caption">
        <h3><%= product.name%></h3>
        <p><%= product.colour%></p>
        <p><%= product.description%></p>
        <strong><%= number_to_currency((product.price), unit: "$") %></strong>
        <p class="actions" ><%= link_to 'Show', product %> <%= link_to 'Edit', edit_product_path(product) %> <%= link_to 'Destroy', product, method: :delete, data:{ confirm: 'Are you sure?' } %>
         </p>
      </div>
    </div>
  </div>