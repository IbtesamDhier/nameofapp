<% if signed_in? %>
  <h4 class="add-review">Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    
    <div class="form-group">
    <%= f.label :body, "Comments", class: 'form-label' %>
    <%= f.text_area :body, class: 'form-control', :required => true, title: "Leave your comments(required)" %>
  </div>
    
    <div class="rating"></div>
   
    <div class="actions">
    <%= f.submit "Submit", class: 'btn btn-primary'%>
  </div>
  <% end %>
<% end %>