
 

<div class="container show-product">
    <div class="thumbnail">
      <% cache @product do %>

      <%= image_tag(@product.image_url, class: "img-responsive product-img img-zoom", data_zoom_image: "@product.image_url") %>
      <h6 class="views-number">  
         Views:
         <span class="badge"><%= @product.views %></span>
         latest review: <span class="badge"><%= @product.get_latest_reviewer %></span>
      </h6>  
 
      <div class="caption">
        <h3><%= @product.name%></h3>
        <p><%= @product.colour%></p>
        <p><%= @product.description%></p>
        <strong><%= @product.price %></strong><span class="glyphicon glyphicon-usd" aria-hidden="true"></span>
        <% end %>
        <p>Average Rating: <div id="average-rating" class="rated" data-score="<%= @product.average_rating %>"></div> </p>

        <%= form_with(url: '/payments/create') do |form| %>
           <%= hidden_field_tag(:product_id, @product.id) %>
          <%= render partial: "shared/stripe_checkout_button" %>
        <% end %>

        <% if signed_in? && current_user.admin? %>
          <p class="actions" ><%= link_to 'Edit', edit_product_path(@product) %>
          </p>
        <% end %>
      </div>

    </div>
    <%= render 'new_comment' %>
    <%= render 'comments' %>

<%= will_paginate @comments %>
</div>
