<section class="container">

  <div class="header">
    <h1>Contact Us</h1>
  </div>

  <div class="row">
    <div class="col-md-4 border-margin">
      <%= flash[:notice] %>
      <%= form_with(url: "/static_pages/thank_you", local: true) do |form| %>

        <div class="form-group">
          <%= form.label :name, class: 'form-label' %>
          <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
        </div>  

        <div class="form-group">
          <%= form.label :email, "Email Address", class: 'form-label' %>
          <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
        </div>

        <div class="form-group">
          <%= form.label :message, class: 'form-label' %>
          <%= form.text_area :message, class: "form-control", placeholder: "Enter Message" %>
        </div>

        <div class="actions">
            <%= form.submit "Send", class: 'btn btn-primary' %>   
        </div>

      <% end %>
    </div>
  </div>
</section>

